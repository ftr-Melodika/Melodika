@{
    ViewData["Title"] = "Configuración";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-3">Configuración</h2>
                    <p class="text-muted mb-4">Personaliza tu experiencia en Melodika. Ajusta las preferencias de tu cuenta y configuraciones de privacidad.</p>
                    <div class="alert alert-light">
                        <small class="text-muted"><i class="bi bi-info-circle me-2"></i>Los cambios se guardarán automáticamente</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center p-4">
                        <div class="d-flex align-items-center w-100">
                            <div class="icon-circle bg-light text-primary me-4">
                                <img src="~/imagenes/configuracion.png" alt="Configuración" width="20">
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Personalizar experiencia</h6>
                                <p class="small text-muted mb-0">Ajusta las preferencias de visualización y notificaciones</p>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </div>
                    </a>
                    
                    <a href="@Url.Action("InformacionUsuario", "Account")" class="list-group-item list-group-item-action d-flex align-items-center p-4">
                        <div class="d-flex align-items-center w-100">
                            <div class="icon-circle bg-light text-primary me-4">
                                <img src="~/imagenes/persona.png" alt="Perfil" width="20">
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Información personal</h6>
                                <p class="small text-muted mb-0">Actualiza tu información de perfil y preferencias</p>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </div>
                    </a>
                    
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center p-4">
                        <div class="d-flex align-items-center w-100">
                            <div class="icon-circle bg-light text-primary me-4">
                                <img src="~/imagenes/candado.png" alt="Seguridad" width="20">
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Privacidad y seguridad</h6>
                                <p class="small text-muted mb-0">Gestiona la seguridad de tu cuenta</p>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </div>
                    </a>
                    
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center p-4">
                        <div class="d-flex align-items-center w-100">
                            <div class="icon-circle bg-light text-primary me-4">
                                <img src="~/imagenes/conexiones.png" alt="Conexiones" width="20">
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Conecta tu cuenta</h6>
                                <p class="small text-muted mb-0">Vincula tus redes sociales y otros servicios</p>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .list-group-item {
        border-left: 0;
        border-right: 0;
        transition: background-color 0.2s;
    }
    
    .list-group-item:first-child {
        border-top: 0;
    }
    
    .list-group-item:last-child {
        border-bottom: 0;
    }
    
    .list-group-item:hover {
        background-color: #f8f9fa;
    }
    
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
    }
    
    .alert {
        border-radius: 0.5rem;
    }
    
    h2 {
        color: #0d6efd;
        font-weight: 600;
    }
    
    .list-group-item h6 {
        color: #212529;
        font-weight: 500;
    }
    
    .bi-chevron-right {
        font-size: 1.25rem;
        opacity: 0.7;
    }
</style>