@{
    ViewData["Title"] = "Login";
}

<section class="login-page">
    <article class="login-caja">
        <h1>Inicio de sesion en melodika</h1>
        <form class="login-formulario" method="post">
            <div class="login-campo">
                <label class="visually-hidden" for="login-email">Correo electrónico o teléfono</label>
                <input class="login-entrada" type="text" id="login-email" name="email" placeholder="Correo electronico o telefono"/>
            </div>
            <div class="login-campo">
                <label class="visually-hidden" for="login-password">Contraseña</label>
                <input class="login-entrada" type="password" id="login-password" name="password" placeholder="Contraseña"/>
            </div>
            <a href='@Url.Action("ElegirUsuario", "Account")' class= "login-boton"> Iniciar sesion </a>
        </form>

        <p>
            ¿No creaste tu cuenta todavia?<br/>
            <a href='@Url.Action("CrearCuenta", "Account")' class = "login-enlace"> Crear cuenta </a>
        </p>

        <nav aria-label="Opciones de redes sociales">
            <a class="login-enlace" href="#">Iniciar sesión con Google</a>
            <a class="login-enlace" href="#">Iniciar sesión con Facebook</a>
            <a class="login-enlace" href="#">Iniciar sesión con Instagram</a>
        </nav>
    </article>
</section>