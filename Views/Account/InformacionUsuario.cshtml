@using melodika.Models
@{
    ViewData["Title"] = "Información del usuario";
}

<div class="container py-5">
    <div class="row justify-content-center g-4">
        
        <section class="col-12 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <p class="text-muted mb-1">Racha actual</p>
                    <h2 class="display-6 fw-bold mb-4 text-dark">@ViewBag.usuario.Racha</h2>

                    @if (ViewBag.instrumentos != null)
                    {
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @foreach (var instrumento in ViewBag.instrumentos)
                            {
                                <p class="text-muted mb-1">Instrumento principal</p> 
                                <span class="badge bg-light text-dark border">@instrumento.NombreInstrumento</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-3">Sin instrumentos seleccionados</p>
                    }

                    <div class="d-flex flex-column gap-2">
                        @if(ViewBag.instrumentos == null){
                            <a href="@Url.Action("SeleccionarInstrumento", "Account")" class="btn btn-outline-primary w-100">Agregar instrumento</a>
                        }
                        else{
                            <a href="@Url.Action("SeleccionarInstrumento", "Account")" class="btn btn-outline-primary w-100">Cambiar instrumento</a>
                        }
                    </div>
                </div>
            </div>
        </section>

        <section class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img src="@ViewBag.usuario.FotoPerfil" alt="Foto de @ViewBag.usuario.Nombre" class="rounded-circle"
                             style="width: 340px; height: 340px; object-fit: cover; border: 4px solid #f0f0f0;">
                    </div>

                    <h2 class="fw-bold mb-3 text-dark">@ViewBag.usuario.Nombre</h2>
                    
                    <div class="d-flex flex-column gap-2 align-items-center mb-4">
                        <div>
                            <span class="text-muted">Fecha de nacimiento:</span>
                            <span class="fw-semibold text-dark">@ViewBag.usuario.FechaNacimiento.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div>
                            <span class="text-muted">Género:</span>
                            <span class="fw-semibold text-dark">@ViewBag.usuario.Genero</span>
                        </div>
                    </div>

                    <a href="@Url.Action("InfoExtraUsuario", "Account")" class="btn btn-dark px-4">Info extra</a>
                </div>
            </div>
        </section>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-12 col-lg-8"> <div class="d-grid gap-2"> <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalCambiarUsuario">
                    Cambiar usuario
                </button>

                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalLogout">
                    Cerrar sesión
                </button>
            </div>
        </div>
    </div>

    @if(ViewBag.mensaje != null)
    {
        <div class="alert alert-info text-center mt-3">
           @ViewBag.mensaje
        </div>
    }

</div> <div class="modal fade" id="modalCambiarUsuario" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmar cambio de usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que querés cambiar de usuario?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <a href="@Url.Action("MostrarUsuario", "Account")" class="btn btn-primary">Sí, cambiar</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalLogout" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Cerrar sesión</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Estás seguro de que querés salir de tu cuenta?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Sí, salir</a>
      </div>
    </div>
  </div>
</div>